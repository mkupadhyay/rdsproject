{
  "version": "2017-02-28",
  "operation": "DeleteItem",
  "key": {
    "id": $util.dynamodb.toDynamoDBJson($ctx.args.input.id),
  },
  "condition": {
    "expression": "attribute_exists(#id) and username = :username",
    "expressionNames": {
      "#id": "id",
    },
    "expressionValues": {
      ":username": $util.dynamodb.toDynamoDBJson($context.identity.username)
    }
  }
}